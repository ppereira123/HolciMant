<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PuntoAnclajeFijo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/textPAF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Punto de anclaje"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/imageViewtextPAF1"
                android:layout_width="163dp"
                android:layout_height="181dp"
                android:layout_gravity="center"
                tools:srcCompat="@mipmap/anclaje" />

            <TextView
                android:id="@+id/textPAF2"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se침ale las opciones que si se cumplen" />
            <TextView
                android:id="@+id/txtPAF3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tipo de Anclaje: "
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Spinner
                android:id="@+id/estadoActualSpinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp" />

            <CheckBox
                android:id="@+id/checkBoxtextPAF1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Inspeccione hebillas, anillas de cuerpo, broches, dedales y almohadillas. No hay distorsi칩n, o tienen bordes agudos, ruidos, fracturas, o partes desgastadas."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <CheckBox
                android:id="@+id/checkBoxtextPAF2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Las hebillas trabajan libremente"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <CheckBox
                android:id="@+id/checkBoxtextPAF3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Revisar las costuras no deben existir hilos que se desprendan, sobre todo en los sitios de remate de hilo. "
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <CheckBox
                android:id="@+id/checkBoxtextPAF4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="Revise si existen las etiquetas de inspecci칩n y registre la actual revisi칩n"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>