<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Signin.LoginFireBase">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgHolcim"
                android:layout_width="226dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginBottom="100dp"
                app:srcCompat="@mipmap/logoholcim" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="331dp"
                android:layout_height="81dp"
                android:layout_gravity="center"
                android:layout_margin="100dp"
                app:srcCompat="@mipmap/logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="57dp" />

            <TextView
                android:id="@+id/txtIniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Iniciar SesiÃ³n"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/btn_login"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/boton_redondo"
                android:elevation="15dp"
                android:gravity="center"
                android:onClick="iniciarSesion"
                android:scaleType="fitCenter"
                android:src="@mipmap/googleazul"
                android:textColor="#2962FF"
                app:backgroundTint="#D5DADD" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>