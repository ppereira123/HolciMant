<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lntxtmessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left">

    <androidx.cardview.widget.CardView
        android:id="@+id/messageCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/tab"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvnameMessage"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:text="Pierina Pereira Campoverde"
                android:textColor="#717070"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/txtmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Hola, qu[e tal has pasado yo muy si si ajajajja"
                android:textColor="#717070" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>