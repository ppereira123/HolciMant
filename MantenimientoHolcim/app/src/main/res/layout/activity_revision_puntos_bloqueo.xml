<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RevisionPuntosBloqueo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtPB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#7CB6B6B6"
                android:gravity="center"
                android:text="Revisión de Puntos de Bloqueo "
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtPB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Nombre:" />

            <EditText
                android:id="@+id/txtPbNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresar nombre del inspector"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtPB3"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Fecha de inspección: " />

            <EditText
                android:id="@+id/txtPbfechaInspección"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingresar fecha de la inspección"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView12"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proxima inspección: " />

            <EditText
                android:id="@+id/txtPbfechaproximaInspeccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ingresar provima fecha de iinspección"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Aplatando el botón de + ingrese los puntos de bloqueo que desee" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnmaspuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:onClick="maspuntodebloqueo"
                android:src="@android:drawable/ic_input_add" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvpuntosdebloqueo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                android:id="@+id/btnGuardarInspeccion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="#becde9"
                android:onClick="subirinspeccion"
                android:text="Subir Inspección"
                android:textColor="#005da6"
                app:cornerRadius="10dp"
                app:icon="@android:drawable/ic_menu_upload"
                app:iconSize="50dp"
                app:iconTintMode="multiply" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>